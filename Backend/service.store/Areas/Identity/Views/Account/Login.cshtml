@model LoginViewModel
@inject SignInManager<User> SignInManager


<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form class="user" asp-controller="Account" asp-action="Login"
                                        asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
                                        <div class="form-group">
                                            <input asp-for="UserNameOrEmail" type="text"
                                                class="form-control form-control-user" id="exampleInputEmail"
                                                aria-describedby="emailHelp" placeholder="Enter Email Address..." />
                                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Password" type="password"
                                                class="form-control form-control-user" id="exampleInputPassword"
                                                placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input"
                                                    id="customCheck" />
                                                <label asp-for="RememberMe" class="custom-control-label"
                                                    for="customCheck">Remember
                                                    Me</label>
                                            </div>
                                        </div>
                                        <button type="submit" 
                                            class="btn btn-primary btn-user btn-block">
                                            Login
                                        </button>
                                    </form>
                                    <hr />
                                    @{
                                        var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                                        var loginProviders = schemes.ToList();
                                        if (loginProviders.Count == 0)
                                        {
                                            <div>
                                                <p>
                                                    This application not already support Sigin with External Login
                                                </p>
                                            </div>
                                        }
                                        else
                                        {
                                            <form asp-controller="Account" asp-action="ExternalLogin"
                                        asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
                                        class="form-horizontal" role="form">
                                                <div>
                                                    <p>
                                                        @foreach (var provider in loginProviders)
                                                        {
                                                            <button value="@provider.Name"
                                                        title="Log in using your @provider.Name account" type="submit"
                                                        class="btn btn-google btn-user btn-block" name="provider">
                                                                <i class="fa-brands fa-google"></i> Login with Google
                                                            </button>
                                                            @* <button type="submit" class="btn btn-primary" name="provider"
                                                        value="@provider.Name"
                                                        title="Log in using your @provider.Name account">@provider.Name</button> *@
                                                        }
                                                    </p>
                                                </div>
                                            </form>
                                        }
                                    }


                                    <hr />
                                    <div class="text-center">
                                        <a class="small" asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"
                                            class="small">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
